<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:gravity="center_horizontal|center_vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/ckd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:focusable="false"
                android:theme="@style/MyCheckBox"
                android:textColor="@color/black"
                android:focusableInTouchMode="false"
                android:gravity="center_vertical" />
            <TextView
                android:id="@+id/shopid"
                android:text="1"
                android:textColor="@color/black"
                android:gravity="center_vertical|center"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
            <ImageView
                android:id="@+id/shopimg"
                android:src="@color/darkblue"
                android:layout_width="100dp"
                android:layout_height="100dp" />
            <RelativeLayout
                android:id="@+id/relative_1"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/name"
                    android:text="苏太太蚕豆"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/pingpai"
                    android:layout_below="@id/name"
                    android:text="品牌 : "
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/food"
                    android:layout_below="@id/name"
                    android:layout_toRightOf="@id/pingpai"
                    android:text="食品"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="价格 : "
                    android:textColor="@color/black"
                    android:id="@+id/price"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@id/name"
                    android:layout_toRightOf="@id/food"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="20$"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/name"
                    android:layout_toRightOf="@id/price"
                    android:id="@+id/thisprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_below="@id/pingpai"
                    android:text="数量 : "
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    android:id="@+id/number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_below="@id/pingpai"
                    android:layout_toRightOf="@id/number"
                    android:text="50"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    android:id="@+id/buynum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/state"
                    android:layout_below="@id/number"
                    android:text="当前状态 : "
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/thisstate"
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/number"
                    android:layout_toRightOf="@id/state"
                    android:text="未付款"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:gravity="center_vertical|center_horizontal"
                    android:background="@drawable/bgcolor_radios"
                    android:layout_width="55dp"
                    android:layout_height="18dp" />
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/number"
                    android:layout_toRightOf="@id/thisstate"
                    android:text="未发货"
                    android:layout_marginLeft="10dp"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:gravity="center_vertical|center_horizontal"
                    android:background="@drawable/bgcolor_radios"
                    android:layout_width="55dp"
                    android:id="@+id/Deliverystatus"
                    android:layout_height="18dp" />
            </RelativeLayout>
    </LinearLayout>
</LinearLayout>