           android:layout_marginLeft="7dp"
           android:layout_marginRight="7dp"
           android:rowCount="2"
           android:columnCount="3"
           android:background="@drawable/tdy_back_radius_brbl_3"
           android:layout_below="@+id/action_home">
           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="horizontal"
               android:layout_columnSpan="3"
               android:layout_height="35dp">
               <TextView
                   android:text="五一市场"
                   android:layout_width="wrap_content"
                   android:layout_marginLeft="10dp"
                   android:layout_marginTop="10dp"
                   android:layout_height="match_parent" />
           </LinearLayout>
           <LinearLayout
               android:id="@+id/home_shop_layout4"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:padding="5dp"
               android:orientation="vertical"
               android:layout_rowWeight="1"
               android:layout_columnWeight="1"
               android:layout_gravity="center"
               android:gravity="center"
               >
               <ImageView
                   android:id="@+id/tejia_image1"
                   android:layout_width="@dimen/shop_WandH"
                   android:layout_height="@dimen/shop_WandH"
                   />
               <TextView
                   android:id="@+id/tejia_type1"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="10sp"
                   android:textColor="@color/black"/>
               <TextView
                   android:id="@+id/tejia_action1"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="10sp"
                   />
           </LinearLayout>

           <LinearLayout
               android:id="@+id/home_shop_layout5"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:padding="5dp"
               android:orientation="vertical"
               android:layout_rowWeight="1"
               android:layout_columnWeight="1"
               android:layout_gravity="center"
               android:gravity="center">
               <ImageView
                   android:id="@+id/tejia_image2"
                   android:layout_width="@dimen/shop_WandH"
                   android:layout_height="@dimen/shop_WandH"
                  />
               <TextView
                   android:id="@+id/tejia_type2"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="10sp"
                   android:textColor="@color/black"/>
               <TextView
                   android:id="@+id/tejia_action2"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="10sp"
                   />
           </LinearLayout>

           <LinearLayout
               android:id="@+id/home_shop_layout6"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:padding="5dp"
               android:orientation="vertical"
               android:layout_rowWeight="1"
               android:layout_columnWeight="1"
               android:layout_gravity="center"
               android:gravity="center">
               <ImageView
                   android:id="@+id/tejia_image3"
                   android:layout_width="@dimen/shop_WandH"
                   android:layout_height="@dimen/shop_WandH"
                   />
               <TextView
                   android:id="@+id/tejia_type3"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="10sp"
                   android:textColor="@color/black"/>
               <TextView
                   android:id="@+id/tejia_action3"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="10sp"
                   />
           </LinearLayout>


           <LinearLayout
               android:id="@+id/home_shop_layout7"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:padding="5dp"
               android:layout_marginTop="10dp"
               android:orientation="vertical"
               android:layout_rowWeight="1"
               android:layout_columnWeight="1"
               android:layout_gravity="center"
               android:gravity="center">
               <ImageView
                   android:src="@color/black"
                   android:id="@+id/tejia_image4"
                   android:layout_width="@dimen/shop_WandH"
                   android:layout_height="@dimen/shop_WandH"
                   />
               <TextView
                   android:text="哈哈哈"
                   android:id="@+id/tejia_type4"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="10sp"
                   android:textColor="@color/black"/>
               <TextView
                   android:text="哈哈哈"
                   android:id="@+id/tejia_action4"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="10sp"
                   />
           </LinearLayout>

           <LinearLayout
               android:id="@+id/home_shop_layout8"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:padding="5dp"
               android:layout_marginTop="10dp"
               android:orientation="vertical"
               android:layout_rowWeight="1"
               android:layout_columnWeight="1"
               android:layout_gravity="center"
               android:gravity="center">
               <ImageView
                   android:id="@+id/tejia_image5"
                   android:layout_width="@dimen/shop_WandH"
                   android:layout_height="@dimen/shop_WandH"
                   />
               <TextView
                   android:id="@+id/tejia_type5"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="10sp"

                   android:textColor="@color/black"/>
               <TextView
                   android:id="@+id/tejia_action5"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="10sp"
                   />
           </LinearLayout>

           <LinearLayout
               android:id="@+id/home_shop_layout9"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:padding="5dp"
               android:layout_marginTop="10dp"
               android:orientation="vertical"
               android:layout_rowWeight="1"
               android:layout_columnWeight="1"
               android:layout_gravity="center"
               android:gravity="center">
               <ImageView
                   android:id="@+id/tejia_image6"
                   android:layout_width="@dimen/shop_WandH"
                   android:layout_height="@dimen/shop_WandH"
                   />
               <TextView
                   android:id="@+id/tejia_type6"
                   android:layout_width="wrap_content"
