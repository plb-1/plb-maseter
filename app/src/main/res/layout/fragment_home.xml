<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#ececec"
    android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/title_home"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorPrimary"
            android:focusable="true"
            android:focusableInTouchMode="true">
            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/dingwei"/>

            <TextView
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv"
                android:id="@+id/adr_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="五一市场"
                android:textColor="@color/white"
                android:textSize="17sp"
                />
            <EditText
                android:id="@+id/tv_search_home"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/adr_home"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/search_home"
                android:drawableLeft="@mipmap/search_home"
                android:drawablePadding="10dp"
                android:padding="5dp"
                android:hint="蓝月亮黄金套装七折起"
                android:textSize="13sp"
                />
    </RelativeLayout>

<ScrollView
    android:layout_below="@+id/title_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">
   <android.support.v4.view.ViewPager
       android:id="@+id/viewPager1"
       android:layout_width="match_parent"
       android:layout_height="150dp"
       />

   <LinearLayout
       android:id="@+id/dot"
       android:layout_marginTop="110dp"
       android:orientation="horizontal"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_centerHorizontal="true">

       <ImageView
           android:id="@+id/dot1"
           android:layout_width="14dp"
           android:layout_height="wrap_content"
           android:src="@mipmap/dot_1"/>

       <ImageView
           android:layout_marginLeft="5dp"
           android:id="@+id/dot2"
           android:layout_width="14dp"
           android:layout_height="wrap_content"
           android:src="@mipmap/dot_2"/>

       <ImageView
           android:layout_marginLeft="5dp"
           android:id="@+id/dot3"
           android:layout_width="14dp"
           android:layout_height="wrap_content"
           android:src="@mipmap/dot_2"/>

       <ImageView
           android:layout_marginLeft="5dp"
           android:id="@+id/dot4"
           android:layout_width="14dp"
           android:layout_height="wrap_content"
           android:src="@mipmap/dot_2"/>
   </LinearLayout>

    <RelativeLayout
        android:id="@+id/kh_home"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="-5dp"
        android:background="@drawable/tdy_back_radius_trtl_3"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_below="@+id/viewPager1"
        android:gravity="center">
        <TextView
            android:id="@+id/action_season_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="13sp"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:layout_alignParentLeft="true"/>
    </RelativeLayout>

       <LinearLayout
           android:id="@+id/kh_ph_home"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@id/kh_home"
           android:orientation="vertical">
           <View
               android:layout_height="1px"
               android:layout_width="match_parent"
               android:background="@color/line_home"
               android:layout_alignParentBottom="true"/>
           <android.support.v4.view.ViewPager
               android:layout_marginLeft="7dp"
               android:layout_marginRight="7dp"
               android:background="@drawable/tdy_home_border"
               android:id="@+id/viewPager3"
               android:layout_width="match_parent"
               android:layout_height="100dp">
           </android.support.v4.view.ViewPager>
           <!--<ImageView-->
               <!--android:id="@+id/image_season_home"-->
               <!--android:layout_width="match_parent"-->
               <!--android:layout_height="100dp"-->
