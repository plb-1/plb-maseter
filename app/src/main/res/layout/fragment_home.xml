               <!--android:layout_marginRight="7dp"-->
               <!--android:background="@drawable/tdy_home_border"-->
                <!--/>-->

           <GridLayout
               android:layout_marginTop="10dp"
               android:layout_width="match_parent"
               android:layout_marginLeft="7dp"
               android:layout_marginRight="7dp"
               android:layout_height="wrap_content"
               android:rowCount="2"
               android:columnCount="3"
               android:background="@drawable/tdy_home_border"
               android:layout_below="@+id/action_home">

           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="horizontal"
               android:layout_columnSpan="3"
               android:layout_height="35dp">
                <TextView
                    android:text="五一市场"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_height="match_parent" />
           </LinearLayout>
           <View
               android:layout_height="1px"
               android:layout_columnSpan="3"
               android:layout_width="match_parent"
               android:background="@color/line_home"
               android:layout_alignParentBottom="true"/>
           <LinearLayout
               android:id="@+id/home_shop_layout1"
               android:weightSum="1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:padding="5dp"
               android:orientation="vertical"
               android:layout_rowWeight="1"
               android:layout_columnWeight="1"
               android:layout_gravity="center"
               android:gravity="center"
               android:background="@drawable/tdy_home_border"
               >
               <ImageView
                   android:id="@+id/season_image1"
                   android:layout_width="@dimen/shop_WandH"
                   android:layout_height="@dimen/shop_WandH"
                  />
               <TextView
                   android:id="@+id/season_type1"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="10sp"
                   android:textColor="@color/black"/>
               <TextView
                   android:id="@+id/season_action1"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="10sp"
                   />
           </LinearLayout>

           <LinearLayout
               android:id="@+id/home_shop_layout2"
               android:weightSum="1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:padding="5dp"
               android:orientation="vertical"
               android:layout_rowWeight="1"
               android:layout_columnWeight="1"
               android:layout_gravity="center"
               android:background="@drawable/tdy_home_border"
               android:gravity="center">
               <ImageView
                   android:id="@+id/season_image2"
                   android:layout_width="@dimen/shop_WandH"
                   android:layout_height="@dimen/shop_WandH"
                   />
               <TextView
                   android:id="@+id/season_type2"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="10sp"
                   android:textColor="@color/black"/>
               <TextView
                   android:id="@+id/season_action2"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="10sp"
                   />
           </LinearLayout>

           <LinearLayout
               android:id="@+id/home_shop_layout3"
               android:weightSum="1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:padding="5dp"
               android:orientation="vertical"
               android:layout_rowWeight="1"
               android:layout_columnWeight="1"
               android:layout_gravity="center"
               android:background="@drawable/tdy_home_border"
               android:gravity="center">
               <ImageView
                   android:id="@+id/season_image3"
                   android:layout_width="@dimen/shop_WandH"
                   android:layout_height="@dimen/shop_WandH"
