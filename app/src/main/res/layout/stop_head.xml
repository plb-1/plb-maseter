<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
   >

    <RelativeLayout
        android:id="@+id/title_home"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:paddingTop="20dp"
        android:background="#fff"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/iv"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:background="@mipmap/dingwei"/>
            <TextView
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv"
                android:id="@+id/adr_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="五一市场"
                android:textColor="@color/orange"
                android:textSize="15sp" />
            <EditText
                android:id="@+id/tv_search_home"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/adr_home"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/fillet"
                android:drawableLeft="@mipmap/search"
                android:drawablePadding="10dp"
                android:hint="请输入商品信息"
                android:textSize="13sp"
                android:paddingLeft="5dp"
                android:paddingRight="60dp"
                android:singleLine="true"/>
            <RelativeLayout
                android:layout_width="55dp"
                android:layout_height="30dp"
                android:background="@drawable/fillet1"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="搜索"
                    android:textColor="#fff"
                    android:textSize="15sp"
                    android:layout_marginLeft="10dp"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>
