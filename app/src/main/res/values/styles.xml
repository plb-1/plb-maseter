<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CheckBoXTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_productinfo_style</item>
    </style>

    <style name="ck">
        <item name="android:button">@drawable/ck_all</item>
    </style>

    <style name="MyCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#F5F5F5</item>
        <item name="colorControlActivated">@color/orange</item>
    </style>


    <!-- product_info -->
    <style name="ProductInfoDialogStyle" parent="@android:style/Theme.Dialog">
         <!--背景色 -->
        <item name="android:windowBackground">@android:color/white</item>
        <!--<item name="android:windowContentOverlay">@null</item>-->

        <!-- 浮于Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- Dialog以外的区域模糊效果 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- Dialog进入及退出动画 -->
        <item name="android:windowAnimationStyle">@style/ProductInfoDialogAnimation</item>
    </style>
    <!-- ActionSheet进出动画 -->
    <style name="ProductInfoDialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/productinfo_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/productinfo_dialog_out</item>
    </style>

    <style name="shop_attention">
        <item name="android:button">@drawable/selector_icon_shop_attention</item>
    </style>

    <style name="setting">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="reg_checkbox">
        <!--波纹的颜色-->
        <item name="android:colorControlHighlight">@color/colorPrimary</item>
        <!--选中的颜色-->
        <item name="colorAccent">@color/orange</item>
    </style>

</resources>
